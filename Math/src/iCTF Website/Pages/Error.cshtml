@page "{code:int}"
@model ErrorModel

@using System.Net;
@using System.Text.RegularExpressions;

@{
    string title = string.Join(" ", Regex.Split(((HttpStatusCode)Model.Code).ToString(), @"(?<!^)(?=[A-Z])"));
    ViewData["Title"] = title;

    string rooNoBooliUrl;
    string rooYayUrl;
    if ((new Random()).Next(10) == 0)
    {
        rooNoBooliUrl = "https://gramoly.org/static/images/GRAMOLY.svg";
        rooYayUrl = "https://gramoly.org/static/images/GRAMOLY.svg";
    }
    else
    {
        rooNoBooliUrl = "https://gramoly.org/static/images/GRAMOLY.svg";
        rooYayUrl = "https://gramoly.org/static/images/GRAMOLY.svg";
    }
}
<div class="container my-5">
    <h1 class="display-1 text-dark mb-0">@Model.Code</h1>
    <img id="roo" class="mw-100 mb-3" src="@rooNoBooliUrl" />
    @if (title != Model.Code.ToString())
    {
        <h4 class="display-4 text-dark">@title</h4>
    }
</div>
<script>var roo = document.getElementById("roo"); roo.onclick = () => roo.src = "@rooYayUrl";</script>
