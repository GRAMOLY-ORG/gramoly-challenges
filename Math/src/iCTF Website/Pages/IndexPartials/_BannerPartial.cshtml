<header>
    <div class="pos-rel">
        <div class="overflow-hidden">
            @{
                var now = DateTime.UtcNow;
                // Halloween
                if (now.Month == 10)
                {
                    <img src="https://gramoly.org/static/images/gramoly_banner.svg" class="d-block banner-img" alt="Banner">
                }
                else
                {
                    <img src="https://gramoly.org/static/images/gramoly_banner.svg" class="d-block banner-img" alt="Banner">
                }
            }
            <div class="position-absolute header-text text-white text-center bg-dark-smooth p-3 w-100" style="display:none">
                <h2>Daily Physics Challenges For Everyone</h2>
                <p>Create an <a class="anchor-link btn btn-outline-light p-0 ps-1 pe-1" asp-page="Register">account</a> or join our <a class="anchor-link btn btn-outline-light p-0 ps-1 pe-1" href="https://gramoly.org/discord" target="_blank">discord</a> server to get started.</p>
            </div>
        </div>
    </div>
</header>
